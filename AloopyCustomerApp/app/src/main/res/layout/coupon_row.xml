<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/frmBody"
    android:layout_margin="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCouponTitle"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid from "
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:id="@+id/lblStartDate"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" until "
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:id="@+id/lblEndDate"
            android:textStyle="bold"
            android:textSize="10dp"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.customer.aloopy.aloopycustomerapp.ProportionalImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgCoupon"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.customer.aloopy.aloopycustomerapp.ProportionalImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imgQRCode"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/abc_input_method_navigation_guard"
                android:padding="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14dp"
                android:rotation="-45.00"
                android:textColor="#FF0000"
                android:id="@+id/lblClaimedDate"
                android:textStyle="bold"
                android:layout_alignTop="@+id/lblCalimed"
                android:layout_alignLeft="@+id/lblCalimed"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="CLAIMED!"
                android:textSize="24dp"
                android:rotation="-45.00"
                android:textColor="#FF0000"
                android:id="@+id/lblCalimed"
                android:textStyle="bold"
                android:layout_alignTop="@+id/imgQRCode"
                android:layout_alignRight="@+id/imgQRCode"
                android:layout_alignEnd="@+id/imgQRCode" />



        </RelativeLayout>


    </FrameLayout>


</LinearLayout>